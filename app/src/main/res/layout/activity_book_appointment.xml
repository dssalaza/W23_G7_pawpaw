<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".BookAppointmentActivity">


    <TextView
        android:id="@+id/txtViewTitleBookAppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:text="@string/stringTxtViewBookAppt"
        android:textColor="@color/brown"
        android:textSize="25sp"
        android:textStyle="bold" />

    <CalendarView
        android:id="@+id/calendarViewBookAppt"
        android:layout_width="371dp"
        android:layout_height="359dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btnBookApptToCheckOutActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="540dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/brown"
        android:text="@string/stringBtnBookApptToCheckOutActivity" />

    <include layout="@layout/navigation_bar" />

    <RadioGroup
        android:id="@+id/radioGroupBookAppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="410dp">

        <RadioButton
            android:id="@+id/premiumPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_pkg"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/basicPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/basic_pkg"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <!--this can be deleted if we don't need the bottom nav bar in this activity-->


</RelativeLayout>